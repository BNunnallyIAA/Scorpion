## Here is an example for Scorpion.
##
syntax "sc" "\.sc$"
color brightred "\<[A-Z_][0-9A-Z_]+\>"
color green "\<(float|double|bool|char|byte|short|str|paragraph|article|int|short|long|enum|void|static|const|set|def|(un)?signed)\>"
color green "\<((s?size)|((u_?)?int(8|16|32|64|ptr)))_t\>"
color green "\<(class|namespace|protected|invisible|typename|this|virtual|using|library|volatile|register|explicit)\>"
color brightyellow "\<(for|if|while|do|else|case|default|switch)\>"
color brightyellow "\<(try|throw|catch|new|delete)\>"
color magenta "\<(break|return)\>"
color brightcyan "^[[:space:]]*#[[:space:]]*(include(_next)?|global|inherit|endif|el(if|se)|if)"
color brightmagenta "'([^'\]|(\\["'abfnrtv\\]))'" "'\\(([0-3]?[0-7]{1,2}))'" "'\\x[0-9A-Fa-f]{1,2}'"

##
## String highlighting.  You will in general want your comments and
## strings to come last, because syntax highlighting rules will be
## applied in the order they are read in.
color brightyellow "<[^=        ]*>" ""(\\.|[^"])*""
##
## This string is VERY resource intensive!
color brightyellow start=""(\\.|[^"])*\\[[:space:]]*$" end="^(\\.|[^"])*""

## Comment highlighting
color cyan "//.*"
color cyan start="\(\*" end="\*\)"

## Trailing whitespace
color ,green "[[:space:]]+$"

## Here is an example for Binary Object file.
##
syntax "bexe" "\.bexe$"
color cyan "\<[0-1]+\>"

## SASM x86 Assembly
syntax "sasm" "\.sasm$"
color brightred "\<[A-Z_][0-9A-Z_]+\>"
color red "\<[#0-9]+\>"
color red  "\<(halt|scmnd|rhalt|chalt|true|false)\>"
color cyan "\<(add|sub|source|rloop|mult|neg|cadd|csub|cmult|cdiv|crem|mlock|lock|mulock|ulock|xreg|clx|nac|rloop|wloop|wloop|endwl|port|same|div|rem|inc|dec|and|or|xor|not|nand|nor|xnor|loadi|loadbl|loadr|mv|rm|func|push|return|call|swp|eof|loop|end|endl|do|mov|rmov|init|ndo|ingtoeq|inltoeq|ingt|inlt|ndo|igtoeq|igt|ilt)\>"
color yellow "\<(eax|ip|ebx|sdx|bp|exc|ps|i1|i2|lg|lsg|se|sfc|scx)\>"
color green "\<(reg)\>"
color blue "\<(include)\>"
##
## String highlighting.  You will in general want your comments and
## strings to come last, because syntax highlighting rules will be
## applied in the order they are read in.
color brightyellow "<[^=        ]*>" ""(\\.|[^"])*""

## Comment highlighting
##color cyan ";.*"

## Trailing whitespace
color ,green "[[:space:]]+$"

